.card-stack
  width: 380px
  height: 575px
  position: absolute
  margin: 20px auto

  .buttons
    position: absolute
    width: 48px
    height: 48px
    left: 0
    top: 20%
    text-decoration: none
    z-index: 5
    background-repeat: no-repeat
    background-position: 0 0
    background-size: contain
    transition: all 0.2s ease
    opacity: 0
    visibility: hidden
    display: none

  .prev
    left: 15px
    right: auto
    background-image: url("data:image/svg+xml,%3Csvg width='26' height='48' viewBox='0 0 26 48' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M24 1.5L3 24L24 46.5' stroke='%23fff' stroke-width='4'/%3E%3C/svg%3E%0A")

  .next
    left: auto
    right: -5px
    background-image: url("data:image/svg+xml,%3Csvg width='26' height='48' viewBox='0 0 26 48' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M2 1.5L23 24L2 46.5' stroke='%23fff' stroke-width='4'/%3E%3C/svg%3E%0A")

  .card-list
    width: 380px

    &__image
      height: 200px

    &__text
      color: #fff
      font-weight: 300

    .card
      display: flex
      align-items: center
      justify-content: center
      transition: all 200ms ease-in-out
      border-radius: 20px
      position: absolute
      list-style: none
      left: 0
      right: 0
      margin: 0 auto
      padding-top: 20px
      text-align: center

      &:nth-child(1), &:nth-child(2)
        &:before
          content: ''
          position: absolute
          bottom: 0
          left: 0
          width: 100%
          height: 50%
          background: linear-gradient(0deg, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.5)), linear-gradient(0deg, rgba(139, 0, 253, 0.2), rgba(139, 0, 253, 0.2)), linear-gradient(0deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), linear-gradient(180deg, rgba(0, 0, 0, 0) 59.9%, rgba(0, 0, 0, 0.5) 81.77%)
          opacity: 0.8
          filter: blur(32px)

          @media (max-width: 959px)
            display: none

        &:after
          content: ''
          position: absolute
          bottom: 0
          left: 0
          width: 100%
          height: 50%
          background: linear-gradient(180deg, #C300FF 0%, #C300FF 62.5%)
          opacity: 0.4
          filter: blur(32px)

          @media (max-width: 959px)
            display: none

        .fill-card
          position: absolute
          bottom: 0
          left: 0
          width: 100%
          height: 50%
          background: linear-gradient(0deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), linear-gradient(0deg, rgba(139, 0, 253, 0.2), rgba(139, 0, 253, 0.2)), linear-gradient(0deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.8))
          box-shadow: inset 0px 4px 250px rgba(139, 0, 253, 0.1)

          @media (max-width: 959px)
            display: none

      &:nth-child(3)
        &:before
          content: ''
          position: absolute
          bottom: 0
          left: 0
          width: 100%
          height: 50%
          background: linear-gradient(0deg, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.5)), linear-gradient(0deg, rgba(139, 0, 253, 0.2), rgba(139, 0, 253, 0.2)), linear-gradient(0deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), linear-gradient(180deg, rgba(0, 0, 0, 0) 59.9%, rgba(0, 0, 0, 0.5) 81.77%)
          opacity: 0.8
          filter: blur(32px)

          @media (max-width: 959px)
            display: none

        &:after
          content: ''
          position: absolute
          bottom: 0
          left: 0
          width: 100%
          height: 50%
          background: linear-gradient(180deg, #C300FF 0%, #C300FF 62.5%)
          opacity: 0.4
          filter: blur(32px)

          @media (max-width: 959px)
            display: none

        .fill-card
          position: absolute
          bottom: 0
          left: 0
          width: 100%
          height: 50%
          background: linear-gradient(0deg, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.5)), linear-gradient(0deg, rgba(139, 0, 253, 0.2), rgba(139, 0, 253, 0.2)), linear-gradient(0deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), linear-gradient(180deg, rgba(0, 0, 0, 0) 59.9%, rgba(0, 0, 0, 0.5) 81.77%)
          opacity: 1
          filter: blur(32px)

          @media (max-width: 959px)
            display: none

      &:nth-child(1)
        bottom: 32px * 2
        width: 80%

      &:nth-child(2)
        bottom: 30px * 3
        width: 90%

      &:nth-child(3)
        bottom: 30px * 4
        width: 95%

      &:nth-child(4)
        bottom: 30px * 5
        width: 100%

        &:before, &:after, .fill-card
          opacity: 0
          visibility: hidden

        img
          opacity: 1

        &:after
          display: none

.transformThis
  animation: scaleDown 500ms

.transformPrev
  animation: scaleUp 200ms
  display: none

@keyframes scaleUp
  0%
    transform: scale(1.2) translateY(-50px)
    opacity: 0

  20%
    transform: scale(1.15) translateY(-40px)
    opacity: 0.1

  40%
    transform: scale(1.1) translateY(-30px)
    opacity: 0.2

  60%
    transform: scale(1.05) translateY(-20px)
    opacity: 0.4

  80%
    transform: scale(1.01) translateY(-10px)
    opacity: 0.8

  100%
    transform: scale(1) translateY(0)
    opacity: 1

@keyframes scaleDown
  0%
    transform: scale(1) translateY(0)
    opacity: 1

  20%
    transform: scale(1.01) translateY(-20px)
    opacity: 0.8

  40%
    transform: scale(1.05) translateY(-40px)
    opacity: 0.4

  60%
    transform: scale(1.1) translateY(-60px)
    opacity: 0.2

  80%
    transform: scale(1.15) translateY(-80px)
    opacity: 0.1

  100%
    transform: scale(1.2) translateY(-100px)
    opacity: 0

@keyframes scaleCard
  0%
    top: 5px

  100%
    top: 24px

@keyframes bounceInLeft
  0%
    opacity: 0
    transform: translateX(40px)

  100%
    transform: translateX(0)

@keyframes bounceInRight
  0%
    opacity: 0
    transform: translateX(-40px)

  100%
    transform: translateX(0)

@keyframes paginationProgressBar
  0%
    width: 0

  100%
    width: 100%