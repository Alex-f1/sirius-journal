.news-slider
  padding-top: 125px
  height: 800px

  @media (max-width: 959px)
    padding-top: 0
    margin-bottom: 55px
    height: auto

  &__container
    @media (max-width: 959px)
      border-radius: 20px
      height: 575px

    .swiper-pagination
      top: 0
      bottom: auto !important
      width: 80px
      display: flex
      align-items: center
      padding-right: 15px
      padding-left: 15px

    .swiper-pagination-bullet
      background-color: transparent
      border-radius: 4px
      flex: 1 1 auto
      margin-right: 4px
      overflow: hidden
      opacity: 1
      padding-top: 15px
      padding-bottom: 15px
      position: relative

      &:after
        content: ''
        position: absolute
        top: 50%
        left: 0
        transform: translateY(-50%)
        width: 100%
        height: 4px
        border-radius: 4px
        background-color: rgba(255, 255, 255, 0.5)

      &:last-child
        margin-right: 0

      span
        position: absolute
        top: 50%
        left: 0
        transform: translateY(-50%)
        display: block
        width: 0
        height: 4px
        border-radius: 4px
        background-color: #fff

      &.swiper-pagination-bullet-active
        span
          animation-name: paginationProgressBar
          animation-duration: 5s
          animation-timing-function: ease-in
          animation-iteration-count: 1
          animation-direction: alternate
          animation-fill-mode: forwards

  &__items
    @media (max-width: 959px)
      height: 575px !important

  &__item
    border-radius: 20px
    overflow: hidden

    @media (max-width: 959px)
      border-radius: 0

  &__body
    width: 100%
    height: 100%
    text-decoration: none
    position: relative
    border-radius: 20px
    overflow: hidden
    display: block

    @media (max-width: 959px)
      border-radius: 0

    &:after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-image: url('../img/slider-img-fill.png')
      background-repeat: no-repeat
      background-position: 0 0
      background-size: cover

  &__img
    width: 100%
    height: 100%
    display: block

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover
      object-position: 50% 50%

  &__content
    display: flex
    flex-direction: column
    position: absolute
    bottom: 0
    left: 50%
    transform: translateX(-50%)
    width: 100%
    padding: 40px

    @media (max-width: 959px)
      padding: 30px 20px

  &__icon
    width: 48px
    height: 48px
    margin-left: auto
    margin-right: auto

  &__name
    font-size: 24px
    color: #fff
    font-weight: 500
    line-height: 1.2
    text-align: center
    text-transform: uppercase
    margin-bottom: 15px
    position: relative
    transition: color 0.3s, ease 0.3s

    @media (max-width: 767px)
      font-size: 20px

    &:before, &:after
      content: ''
      position: absolute
      top: 50%
      width: 8px
      height: 89px
      transform: translateY(-50%)
      opacity: 0
      visibility: hidden
      background-repeat: no-repeat
      background-position: 0 0
      transition: opacity 0.5s, left 0.5s, right 0.5s, ease 0.5s

  &__tags
    display: flex
    align-items: center
    justify-content: center
    flex-wrap: wrap
    margin-bottom: 15px

  &__tag
    font-size: 13px
    color: #fff
    font-weight: 500
    line-height: 1
    text-align: center
    letter-spacing: 0.5px
    padding: 4px 8px
    background-color: rgba(211, 206, 214, 0.16)
    border-radius: 4px
    margin-right: 15px

    &:last-child
      margin-right: 0

  &__date
    font-size: 14px
    color: #fff
    font-family: $fonts.additionalFont
    font-weight: 400
    line-height: 1
    text-align: center
    letter-spacing: 2px
    text-transform: uppercase
    display: flex
    align-items: center
    justify-content: center

    i
      flex: 0 0 4px
      width: 4px
      height: 4px
      margin-right: 15px
      margin-left: 15px
      background-color: #fff
      border-radius: 50%

