.article-thumb-detailed
  display: flex

  @media (min-width: 640px)
    padding: 15px 40px 30px 40px
    border-radius: 24px
    transition: background-color 0.3s, ease 0.3s

  @media (max-width: 639px)
    padding-top: 15px

  &:hover
    @media (min-width: 640px)
      background-color: #FBF7FC

    & ^[0]
      &__button-more
        @media (min-width: 640px)
          color: #fff
          border-color: transparent

        &:after
          @media (min-width: 640px)
            width: 200px
            height: 200px
            background-color: #1E0B2E

        &:hover
          @media (min-width: 640px)
            border-color: transparent !important

          &:after
            @media (min-width: 640px)
              background-color: #8B00FD !important

  &__body
    display: flex

    @media (max-width: 639px)
      flex-direction: column

  &__preview
    flex: 0 0 144px
    width: 144px
    max-width: 144px
    display: flex
    flex-direction: column
    align-items: center
    padding-top: 30px
    margin-right: 50px

    @media (max-width: 639px)
      flex: none
      width: 100%
      max-width: 100%
      flex-direction: row
      justify-content: center
      border-bottom: 1px solid #D3CED6
      padding-top: 0
      padding-bottom: 15px
      margin-right: 0

  &__content
    max-width: 700px
    width: 100%

    @media (max-width: 639px)
      padding-top: 15px

  &__img
    width: 144px
    height: 144px
    text-decoration: none
    border-radius: 16px
    overflow: hidden
    margin-bottom: 35px
    display: block

    @media (max-width: 639px)
      margin-bottom: 0

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover
      object-position: center center

  &__icon
    width: 48px
    height: 48px
    margin-right: auto
    margin-left: auto
    margin-top: -50px
    transform: translateY(-10px)

    @media (max-width: 639px)
      margin-top: -15px

    img
      vertical-align: top

  &__info
    text-align: center

    @media (max-width: 639px)
      flex: 0 0 110px
      width: 110px
      max-width: 110px
      margin-left: 50px

    @media (max-width: 374px)
      margin-left: 25px

  &__name
    font-size: 14px
    color: #D3CED6
    font-family: $fonts.additionalFont
    font-weight: 400
    line-height: 1.2
    text-align: center
    letter-spacing: 4px
    text-transform: uppercase
    margin-bottom: 10px

  &__count-edition
    font-size: 20px
    color: #000000
    font-family: $fonts.textFont
    font-style: italic
    font-weight: 400
    line-height: 1.1
    text-align: center
    margin-bottom: 15px
    padding-right: 10px
    padding-left: 10px
    display: inline-block
    vertical-align: top
    position: relative

    &:before, &:after
      content: ''
      position: absolute
      top: 50%
      width: 4px
      height: 26px
      transform: translateY(-50%)
      background-repeat: no-repeat
      background-position: 0 0
      transition: opacity 0.5s, left 0.5s, right 0.5s, ease 0.5s

    &:before
      left: -5px
      background-image: url("data:image/svg+xml,%3Csvg width='4' height='26' viewBox='0 0 4 26' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M2.38053 25L3 24.8326C2.09735 20.9814 1.63717 16.9814 1.63717 12.9814C1.63717 8.9814 2.09735 5 3 1.13023L2.38053 1C1.46018 4.90698 1 8.94419 1 13C1 17.0558 1.46018 21.093 2.38053 25Z' fill='%23A400FF' stroke='%23A400FF'/%3E%3C/svg%3E%0A")

    &:after
      right: -5px
      background-image: url("data:image/svg+xml,%3Csvg width='4' height='26' viewBox='0 0 4 26' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.61947 25L1 24.8326C1.90265 20.9814 2.36283 16.9814 2.36283 12.9814C2.36283 8.9814 1.90265 5 1 1.13023L1.61947 1C2.53982 4.90698 3 8.94419 3 13C3 17.0558 2.53982 21.093 1.61947 25Z' fill='%23A400FF' stroke='%23A400FF'/%3E%3C/svg%3E%0A")

  &__date
    font-size: 14px
    color: #D3CED6
    font-family: $fonts.additionalFont
    font-weight: 400
    line-height: 1
    text-align: center
    letter-spacing: 2px
    text-transform: uppercase
    display: flex
    align-items: center
    margin-bottom: 10px

    @media (max-width: 639px)
      display: none

    &--mobile
      display: flex !important
      flex-direction: column
      align-items: center

      @media (min-width: 640px)
        display: none !important

      span
        margin-bottom: 5px

      i
        margin-bottom: 5px

    i
      flex: 0 0 4px
      width: 4px
      height: 4px
      margin-right: 20px
      margin-left: 20px
      background-color: #D3CED6
      border-radius: 50%

    .time-icon
      display: flex
      align-items: center

      &:before
        content: ''
        flex: 0 0 19px
        width: 19px
        max-width: 19px
        height: 19px
        background-repeat: no-repeat
        background-position: 0 0
        background-image: url("data:image/svg+xml,%3Csvg width='19' height='18' viewBox='0 0 19 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='9.5' cy='9' r='8' stroke='%23D3CED6' stroke-width='2'/%3E%3Cpath d='M9.5 9H8.5V9.41421L8.79289 9.70711L9.5 9ZM10.5 5.5V4.5H8.5V5.5H10.5ZM11.2929 12.2071L12 12.9142L13.4142 11.5L12.7071 10.7929L11.2929 12.2071ZM10.5 9V5.5H8.5V9H10.5ZM8.79289 9.70711L11.2929 12.2071L12.7071 10.7929L10.2071 8.29289L8.79289 9.70711Z' fill='%23D3CED6'/%3E%3C/svg%3E%0A")
        margin-right: 10px

  &__main-name
    font-size: 24px
    color: #000
    font-weight: 500
    line-height: 1.2
    text-transform: uppercase
    text-decoration: none
    display: block
    margin-bottom: 15px
    max-width: 530px
    width: 100%
    transition: color 0.3s, ease 0.3s

    @media (max-width: 767px)
      font-size: 20px

    &:hover
      color: #9900FF

  &__tags
    width: 100%
    display: flex
    align-items: center
    flex-wrap: wrap
    margin-bottom: 15px

  &__tag
    font-size: 13px
    color: #1E0B2E
    font-weight: 500
    line-height: 1
    text-align: center
    text-decoration: none
    letter-spacing: 0.5px
    padding: 4px 8px
    background-color: rgba(211, 206, 214, 0.16)
    border-radius: 4px
    margin-right: 15px
    transition: color 0.3s, ease 0.3s

    &:hover
      color: #9900FF

    &:last-child
      margin-right: 0

  &__text
    margin-bottom: 15px

    h3
      font-size: 28px
      color: #000
      font-family: $fonts.textFont
      font-weight: 400
      line-height: 1.2
      margin-top: 0
      margin-bottom: 20px

      @media (max-width: 767px)
        font-size: 24px

    p
      font-size: 20px
      color: #000
      font-family: $fonts.textFont
      font-weight: 400
      line-height: 1.3
      margin-top: 0
      margin-bottom: 0
      text-overflow: ellipsis
      display: -webkit-box
      -webkit-line-clamp: 2
      -webkit-box-orient: vertical
      white-space: normal
      overflow: hidden
      height: 50px

      @media (max-width: 639px)
        -webkit-line-clamp: 5
        height: 125px

  &__button-more
    font-size: 15px
    padding: 7px 15px
    min-width: 115px
    text-transform: none