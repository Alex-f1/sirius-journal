.next-article
  padding-top: 50px
  padding-bottom: 40px
  border-top: 1px solid #ECE4F0

  &._is-visible
    & ^[0]
      &__title
        letter-spacing: 50px

        &:before, &:after
          opacity: 0

  &__head
    text-align: center
    background-color: #fff
    width: 100%
    padding-top: 20px
    padding-bottom: 10px
    margin-bottom: 50px

    @media (min-width: 1280px)
      position: sticky
      top: 0
      z-index: 50

    @media (max-width: 1023px)
      margin-bottom: 25px

  &__title
    line-height: 1.5
    position: relative
    display: inline-block
    vertical-align: top
    padding-right: 10px
    padding-left: 10px
    margin-bottom: 0
    transition: letter-spacing 1s, ease-in 1s

    @media (max-width: 1023px)
      letter-spacing: 5px
      padding-left: 10px

    &:before, &:after
      content: ''
      position: absolute
      top: 50%
      width: 8px
      height: 50px
      transform: translateY(-50%)
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      transition: opacity 1.5s, left 1.5s, right 1.5s, ease 1.5s

      @media (max-width: 1023px)
        display: none

    &:before
      left: 0
      background-image: url("data:image/svg+xml,%3Csvg width='8' height='89' viewBox='0 0 8 89' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M6.70297 1C2.97927 14.9237 1 29.5016 1 44.5C1 59.4984 2.97927 74.0607 6.70297 88' stroke='%239900FF' stroke-width='1.5' stroke-miterlimit='10'/%3E%3C/svg%3E%0A")

    &:after
      right: 0
      background-image: url("data:image/svg+xml,%3Csvg width='8' height='89' viewBox='0 0 8 89' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.15228 1C4.9705 14.9237 7 29.5016 7 44.5C7 59.4984 4.9705 74.0607 1.15228 88' stroke='%239900FF' stroke-width='1.5' stroke-miterlimit='10'/%3E%3C/svg%3E%0A")

  &__top
    text-align: center

    h2
      font-size: 42px
      color: #1E0B2E
      font-weight: 500
      line-height: 1.2
      text-align: center
      text-transform: uppercase
      margin-top: 0
      margin-bottom: 10px

      @media (max-width: 767px)
        font-size: 28px

  &__date
    font-size: 14px
    color: #D3CED6
    font-family: $fonts.additionalFont
    font-weight: 400
    line-height: 1
    text-align: center
    letter-spacing: 2px
    text-transform: uppercase
    display: flex
    align-items: center
    justify-content: center
    margin-bottom: 10px

    i
      flex: 0 0 4px
      width: 4px
      height: 4px
      margin-right: 20px
      margin-left: 20px
      background-color: #D3CED6
      border-radius: 50%

  &__poster
    border-radius: 16px
    overflow: hidden
    width: 100%
    height: 480px

    @media (max-width: 767px)
      height: 215px

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover
      object-position: center center

  &__info
    padding: 8px 0
    display: flex
    align-items: center
    justify-content: space-between

  &__author
    display: flex
    align-items: center
    text-decoration: none

    &:hover
      & ^[0]
        &__author-pic
          border-color: #9900FF

        &__author-name
          color: #9900FF

  &__author-pic
    flex: 0 0 48px
    width: 48px
    max-width: 48px
    height: 48px
    border-radius: 50%
    border: 3px solid #F2F2F2
    margin-right: 3px
    transition: border-color 0.3s, ease 0.3s

    img
      vertical-align: top

  &__author-name
    color: #1E0B2E

    strong
      font-size: 14px
      font-family: $fonts.additionalFont
      font-weight: 400
      line-height: 1.1
      display: block
      transition: color 0.3s, ease 0.3s

    span
      font-size: 14px
      font-weight: 500
      line-height: 1.1
      display: block
      transition: color 0.3s, ease 0.3s

  &__reading-time
    font-size: 14px
    color: #1E0B2E
    font-family: $fonts.additionalFont
    font-weight: 400
    line-height: 1.1
    letter-spacing: 5px
    text-transform: uppercase
    display: flex
    align-items: center
    margin-right: 75px

    @media (max-width: 767px)
      display: none

    &:before
      content: ''
      flex: 0 0 25px
      width: 25px
      max-width: 25px
      height: 25px
      background-image: url("data:image/svg+xml,%3Csvg width='25' height='24' viewBox='0 0 25 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='12.5' cy='12' r='8' stroke='%231E0B2E' stroke-width='2'/%3E%3Cpath d='M12.5 12H11.5V12.4142L11.7929 12.7071L12.5 12ZM13.5 8.5V7.5H11.5V8.5H13.5ZM14.2929 15.2071L15 15.9142L16.4142 14.5L15.7071 13.7929L14.2929 15.2071ZM13.5 12V8.5H11.5V12H13.5ZM11.7929 12.7071L14.2929 15.2071L15.7071 13.7929L13.2071 11.2929L11.7929 12.7071Z' fill='%231E0B2E'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-size: contain
      background-position: 0 0
      margin-right: 8px

  &__poster-name
    color: #1E0B2E
    text-align: right

    strong
      font-size: 14px
      font-family: $fonts.additionalFont
      font-weight: 400
      line-height: 1.1
      display: block

    span
      font-size: 14px
      font-weight: 500
      line-height: 1.1
      display: block

  &__read
    margin-top: 35px
    width: 100%
    max-width: 100%

    &:hover
      &:after
        transform: scale(6.2) translate(-50%, -50%)