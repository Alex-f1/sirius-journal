.articles-day
  padding-top: 60px
  text-align: center

  @media (max-width: 1279px)
    overflow: hidden

  @media (max-width: 959px)
    padding-top: 20px

  &._is-visible
    & ^[0]
      &__title
        letter-spacing: 50px

        &:before, &:after
          opacity: 0

  &__head
    background-color: #fff
    width: 100%
    padding-top: 20px
    padding-bottom: 10px
    margin-bottom: 50px

    @media (min-width: 1280px)
      position: sticky
      top: 0
      z-index: 50

  &__title
    line-height: 1.5
    position: relative
    display: inline-block
    vertical-align: top
    padding-right: 10px
    padding-left: 10px
    
    margin-bottom: 0
    transition: letter-spacing 1s, ease-in 1s

    @media (max-width: 1023px)
      letter-spacing: 25px
      padding-left: 30px
      margin-bottom: 25px

    &:before, &:after
      content: ''
      position: absolute
      top: 50%
      width: 8px
      height: 50px
      transform: translateY(-50%)
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      transition: opacity 1.5s, left 1.5s, right 1.5s, ease 1.5s

      @media (max-width: 1023px)
        display: none

    &:before
      left: 0
      background-image: url("data:image/svg+xml,%3Csvg width='8' height='89' viewBox='0 0 8 89' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M6.70297 1C2.97927 14.9237 1 29.5016 1 44.5C1 59.4984 2.97927 74.0607 6.70297 88' stroke='%239900FF' stroke-width='1.5' stroke-miterlimit='10'/%3E%3C/svg%3E%0A")

    &:after
      right: 0
      background-image: url("data:image/svg+xml,%3Csvg width='8' height='89' viewBox='0 0 8 89' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.15228 1C4.9705 14.9237 7 29.5016 7 44.5C7 59.4984 4.9705 74.0607 1.15228 88' stroke='%239900FF' stroke-width='1.5' stroke-miterlimit='10'/%3E%3C/svg%3E%0A")

  &__cols
    width: 100%
    display: flex

    @media (max-width: 1279px)
      flex-wrap: wrap

    @media (max-width: 959px)
      flex-direction: column

  &__col
    flex: 0 0 385px
    width: 385px
    max-width: 385px
    margin-right: 30px

    &--slider
      min-height: 660px

      @media (max-width: 1279px)
        flex: 0 0 385px
        width: 385px
        max-width: 385px
        margin-right: 0

      @media (max-width: 959px)
        min-height: auto

      & ^[0]
        &__slider-wrapper
          @media (min-width: 1280px)
            position: sticky
            top: 70px
            z-index: 45

    &--left
      @media (max-width: 1279px)
        flex: 1 1 auto
        max-width: none
        margin-right: 0

      & ^[0]
        &__items
          @media (max-width: 1279px)
            display: flex
            flex-wrap: wrap

    &--right
      @media (max-width: 1279px)
        flex: 1 1 auto
        width: 100%
        max-width: 100%

      & ^[0]
        &__items
          @media (max-width: 1279px)
            display: flex
            flex-wrap: wrap

    &:last-child
      margin-right: 0

    @media (max-width: 959px)
      flex: none
      width: 100%
      max-width: 100%

  &__items
    @media (max-width: 1279px)
      justify-content: center

  &__item
    margin-bottom: 70px

    &:last-child
      margin-bottom: 0

    @media (max-width: 959px)
      padding-right: 15px
      padding-left: 15px
      margin-bottom: 50px