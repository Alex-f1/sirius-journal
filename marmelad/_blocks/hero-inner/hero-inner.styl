.hero-inner
  padding-bottom: 20px

  @media (max-width: 1279px)
    padding-bottom: 30px

  &__info
    padding: 40px
    min-height: 500px
    background-color: #1E0B2E
    border-radius: 32px
    position: relative
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

    @media (max-width: 767px)
      min-height: 216px
      padding: 12px

  &__img
    img
      vertical-align: top