html,
body
  margin 0
  padding 0

html
  min-height 100%
  min-height 100vh

.app
  display flex
  flex-direction column
  height 100%
  height 100vh

  &__wrapper
    display flex
    flex-direction column
    min-height 100%
    min-height 100vh

  &__content
    display flex
    flex 1 0 auto

  &__main
    flex 1

.contain
  max-width: 1216px + 8px + 8px
  width 100%
  padding-right 8px
  padding-left 8px
  margin-right auto
  margin-left auto