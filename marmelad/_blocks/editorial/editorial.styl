.editorial
  padding-top: 50px
  padding-bottom: 70px

  @media (max-width: 1279px)
    padding-top: 30px
    padding-bottom: 10px

  &._is-visible
    & ^[0]
      &__title
        letter-spacing: 50px

        &:before, &:after
          opacity: 0

  &__head
    text-align: center
    background-color: #fff
    width: 100%
    padding-top: 20px
    padding-bottom: 10px
    margin-bottom: 50px

    @media (min-width: 1280px)
      position: sticky
      top: 0
      z-index: 50

    @media (max-width: 1023px)
      margin-bottom: 25px

  &__title
    line-height: 1.5
    position: relative
    display: inline-block
    vertical-align: top
    padding-right: 10px
    padding-left: 10px
    margin-bottom: 0
    transition: letter-spacing 1s, ease-in 1s

    @media (max-width: 1023px)
      letter-spacing: 5px
      padding-left: 10px

    &:before, &:after
      content: ''
      position: absolute
      top: 50%
      width: 8px
      height: 50px
      transform: translateY(-50%)
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      transition: opacity 1.5s, left 1.5s, right 1.5s, ease 1.5s

      @media (max-width: 1023px)
        display: none

    &:before
      left: 0
      background-image: url("data:image/svg+xml,%3Csvg width='8' height='89' viewBox='0 0 8 89' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M6.70297 1C2.97927 14.9237 1 29.5016 1 44.5C1 59.4984 2.97927 74.0607 6.70297 88' stroke='%239900FF' stroke-width='1.5' stroke-miterlimit='10'/%3E%3C/svg%3E%0A")

    &:after
      right: 0
      background-image: url("data:image/svg+xml,%3Csvg width='8' height='89' viewBox='0 0 8 89' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.15228 1C4.9705 14.9237 7 29.5016 7 44.5C7 59.4984 4.9705 74.0607 1.15228 88' stroke='%239900FF' stroke-width='1.5' stroke-miterlimit='10'/%3E%3C/svg%3E%0A")

  &__items
    display: flex
    flex-wrap: wrap
    justify-content: center
    padding-top: 30px
    margin-left: -30px

    @media (max-width: 767px)
      padding-top: 0

  &__item
    width: 25%
    padding-left: 30px
    margin-bottom: 60px
    display: flex
    justify-content: center

    @media (max-width: 1279px)
      width: 33.333%

    @media (max-width: 767px)
      width: 50%
      margin-bottom: 30px

  &__body
    text-align: center
    width: 100%
    display: flex
    flex-direction: column
    align-items: center
    padding-right: 35px
    padding-left: 35px

    @media (max-width: 639px)
      padding-right: 0
      padding-left: 0

  &__img
    width: 176px
    height: 176px
    background-color: #ECE4F0
    border-radius: 50%
    position: relative
    overflow: hidden
    margin-right: auto
    margin-left: auto
    margin-bottom: 15px

    @media (max-width: 639px)
      width: 112px
      height: 112px

    img
      vertical-align: top
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)

  &__content
    max-width: 230px
    width: 100%
    margin-right: auto
    margin-left: auto

    @media (max-width: 639px)
      max-width: 200px

  &__name
    font-size: 24px
    color: #1E0B2E
    font-weight: 500
    line-height: 1.2
    text-align: center
    text-transform: uppercase
    margin-bottom: 15px

    @media (max-width: 639px)
      font-size: 20px

  &__position
    font-size: 14px
    color: #D3CED6
    font-family: $fonts.additionalFont
    font-weight: 400
    line-height: 1.3
    text-align: center
    letter-spacing: 5px
    text-transform: uppercase

  &__bottom
    max-width: 1030px
    width: 100%
    margin-right: auto
    margin-left: auto
    text-align: center

  &__text
    p
      a
        font-size: 20px
        color: #1E0B2E
        font-family: $fonts.textFont
        font-weight: 500
        line-height: 1.3
        text-decoration: none
        border-bottom: 2px solid #A400FF
        transition: color 0.3s, border-color 0.3s, ease 0.3s

        &:hover
          color: #A400FF
          border-color: transparent