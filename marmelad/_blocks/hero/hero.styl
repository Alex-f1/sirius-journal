.hero
  &__info
    padding: 40px
    min-height: 500px
    position: relative
    display: flex
    flex-direction: column
    align-items: center
    justify-content: flex-end
    transition: margin 0.3s, ease 0.3s

    @media (max-width: 1232px)
      margin-right: -8px
      margin-left: -8px

    @media (max-width: 639px)
      padding: 32px

    &:hover
      & ^[0]
        &__img
          img
            transform: scale(1.1)

  &__img
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
    border-radius: 32px
    overflow: hidden
    z-index: 1
    transition: border-radius 0.3s, ease 0.3s

    @media (max-width: 1232px)
      border-radius: 0

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover
      object-position: 72% 0
      transition: transform 1s, ease 1s

  &__content
    color: #fff
    text-align: center
    max-width: 700px
    width: 100%
    margin-right: auto
    margin-left: auto
    position: relative
    z-index: 2

  &__date
    font-size: 14px
    font-family: $fonts.additionalFont
    font-weight: 400
    line-height: 1
    letter-spacing: 3px
    text-transform: uppercase
    margin-bottom: 20px

  &__title
    font-size: 42px
    font-weight: 500
    line-height: 1.2
    text-transform: uppercase
    margin-top: 0
    margin-bottom: 20px

    @media (max-width: 639px)
      font-size: 28px

  &__link-more
    @media (max-width: 479px)
      width: 100%
      max-width: 100%

    &:after
      @media (max-width: 479px)
        transform-origin: center

    &:hover
      &:after
        @media (max-width: 479px)
          transform: scale(2) translate(-25%, -25%)