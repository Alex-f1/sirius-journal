.top-line
  position: relative

  &__main-bar
    padding-top: 8px
    padding-bottom: 8px
    background-color: #FBF7FC
    position: relative
    z-index: 2
    height: 64px

  &__inner
    display: flex
    justify-content: space-between
    align-items: center
    height: 100%

    &.contain
      padding-right: 20px
      padding-left: 20px

  &__button-search
    display: flex
    align-items: center

    .svg-icon
      stroke: #1E0B2E
      fill: transparent

  &__button-burger
    flex: 0 0 32px
    width: 32px
    max-width: 32px
    height: 32px
    background-color: transparent
    border: none
    outline: none !important
    position: relative
    cursor: pointer

    &:hover
      &:before, &:after
        background-color: #9900FF

    &:before, &:after
      content: ''
      position: absolute
      width: 24px
      height: 2px
      left: 50%
      transform: translateX(-50%)
      background-color: #1E0B2E
      transition: transform 0.3s, background 0.3s, ease 0.3s

    &:before
      top: 10px

    &:after
      bottom: 10px

    &._is-active
      &:before
        top: 14px
        transform: translateX(-50%) rotate(-45deg)

      &:after
        bottom: 16px
        transform: translateX(-50%) rotate(45deg)

  &__links
    display: flex
    align-items: center

    a
      font-size: 15px
      color: #1E0B2E
      font-weight: 500
      line-height: 1
      letter-spacing: 0.5px
      text-decoration: none
      display: block
      padding-top: 10px
      padding-bottom: 12px
      display: flex
      align-items: center
      margin-right: 50px

      @media (max-width: 1023px)
        margin-right: 20px

      span
        margin-right: 5px

      .svg-icon
        stroke: #1E0B2E
        fill: #1E0B2E

      &:last-child
        margin-right: 0

  &__nav-bar
    border-bottom: 1px solid #ECE4F0
    position: relative
    z-index: 1

    @media (max-width: 767px)
      display: none