  &__find-answer
    background-color: #FBF7FC
    border-top: 1px solid #ECE4F0
    border-bottom: 1px solid #ECE4F0
    margin-bottom: 30px

    h3
      color: #9900FF
      margin-bottom: 0
      padding: 25px 25px 20px 25px
      display: flex
      justify-content: space-between
      cursor: pointer

      &:after
        content: ''
        flex: 0 0 16px
        width: 16px
        max-width: 16px
        height: 10px
        background-image: url("data:image/svg+xml,%3Csvg width='16' height='10' viewBox='0 0 16 10' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M14.5 8.5L8 2L1.5 8.5' stroke='%239900FF' stroke-width='2'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-size: contain
        background-position: 0 0
        margin-top: 5px
        transform: rotate(180deg)
        transition: transform 0.3s, ease 0.3s

      &._is-active
        &:after
          transform: rotate(0)

  &__find-answer-inner
    display: none
    padding: 0 25px 25px 25px

    .button-default
      display: flex
      align-items: center
      justify-content: center
      max-width: 220px

      &:before
        content: ''
        flex: 0 0 16px
        width: 16px
        max-width: 16px
        height: 10px
        background-image: url("data:image/svg+xml,%3Csvg width='16' height='10' viewBox='0 0 16 10' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M14.5 8.5L8 2L1.5 8.5' stroke='%231E0B2E' stroke-width='2'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-size: contain
        background-position: 0 0
        order: 1
        margin-left: 10px
        position: relative
        z-index: 2
        transition: background 0.3s, ease 0.3s

      &:hover
        &:after
          transform: scale(2) translate(-25%, -25%)

        &:before
          background-image: url("data:image/svg+xml,%3Csvg width='16' height='10' viewBox='0 0 16 10' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M14.5 8.5L8 2L1.5 8.5' stroke='%23fff' stroke-width='2'/%3E%3C/svg%3E%0A")

  &__other-article
    padding-top: 25px
    padding-bottom: 25px
    padding-left: 10px
    border-top: 1px solid #ECE4F0
    border-bottom: 1px solid #ECE4F0
    margin-bottom: 30px
    display: flex
    align-items: center

    @media (max-width: 639px)
      flex-direction: column

  &__other-article-img
    flex: 0 0 240px
    width: 240px
    max-width: 240px

    @media (max-width: 639px)
      flex: none
      margin-right: auto
      margin-left: auto
      margin-bottom: 15px

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover
      object-position: center center

  &__other-article-text
    padding: 0 25px
    text-align: center

    p
      font-size: 24px
      color: #1E0B2E
      font-weight: 500
      line-height: 1.2
      text-align: center
      text-transform: uppercase

      @media (max-width: 767px)
        font-size: 20px

      @media (max-width: 639px)
        margin-bottom: 10px

    & ^[0]
      &__tags
        justify-content: center

  &__tags
    display: flex
    align-items: center
    flex-wrap: wrap
    margin-bottom: 15px

    a
      font-size: 13px
      color: #1E0B2E
      font-weight: 500
      line-height: 1
      text-align: center
      text-decoration: none
      letter-spacing: 0.5px
      padding: 4px 8px
      background-color: rgba(211, 206, 214, 0.16)
      border-radius: 4px
      margin-right: 15px
      transition: color 0.3s, ease 0.3s

      &:hover
        color: #9900FF

      &:last-child
        margin-right: 0

  &__bottom
    max-width: 700px + 8px + 8px
    width: 100%
    padding-top: 15px
    padding-right: 8px
    padding-left: 8px
    margin-right: auto
    margin-left: auto

    @media (max-width: 1023px)
      max-width: 100%

  &__rate-article
    display: flex
    align-items: center
    padding-top: 30px
    padding-bottom: 30px

    @media (max-width: 413px)
      justify-content: space-between
      margin-right: -14px

  &__rate-article-name
    font-size: 24px
    color: #1E0B2E
    font-weight: 500
    line-height: 1.1
    text-transform: uppercase
    margin-right: 15px

    @media (max-width: 767px)
      font-size: 20px
      margin-right: 8px

    @media (max-width: 374px)
      font-size: 16px

  &__rating-button
    width: 80px
    height: 50px
    background-color: #FBF7FC
    border-radius: 24px
    border: none
    padding: 0
    display: flex
    align-items: center
    justify-content: center
    cursor: pointer
    margin-right: 15px
    transition: background-color 0.3s, ease 0.3s

    @media (max-width: 767px)
      margin-right: 8px

    &:last-child
      margin-right: 0

    i
      flex: 0 0 30px
      width: 30px
      max-width: 30px
      height: 35px

      @media (max-width: 767px)
        flex: 0 0 20px
        width: 20px
        max-width: 20px
        height: 25px

      img
        vertical-align: top

    span
      font-size: 13px
      color: #000
      font-weight: 500
      line-height: 1
      letter-spacing: 0.5px
      margin-left: 5px
      transition: color 0.3s, ease 0.3s

    &:hover
      background-color: #9900FF

      span
        color: #fff

  &__shares
    padding: 30px 0
    border-top: 1px solid #ECE4F0
    display: flex
    align-items: center

    @media (max-width: 639px)
      flex-direction: column
      align-items: flex-start

  &__shares-name
    font-size: 24px
    color: #1E0B2E
    font-weight: 500
    line-height: 1.1
    text-transform: uppercase
    margin-right: 15px

    @media (max-width: 767px)
      font-size: 20px

    @media (max-width: 639px)
      margin-right: 0
      margin-bottom: 15px

    @media (max-width: 374px)
      font-size: 16px

  &__shares-links
    display: flex
    align-items: center

    @media (max-width: 639px)
      width: 100%
      justify-content: space-between

    a
      text-decoration: none
      flex: 0 0 48px
      width: 48px
      max-width: 48px
      height: 48px
      margin-right: 15px

      &:last-child
        margin-right: 0

      svg
        path
          transition: fill 0.3s, ease 0.3s

      &:hover
        svg
          path
            fill: #9900FF