.main-menu
  @media (max-width: 1023px)
    padding-top: 15px

  &__nav
    ul
      list-style: none
      padding-left: 0
      margin: 0
      display: flex
      align-items: center

      @media (max-width: 1023px)
        flex-direction: column
        align-items: flex-start

      li
        margin-right: 50px

        @media (max-width: 1023px)
          margin-right: 0

        a
          font-size: 15px
          color: #1E0B2E
          font-weight: 500
          line-height: 1
          letter-spacing: 0.5px
          text-decoration: none
          display: block
          padding-top: 15px
          padding-bottom: 15px
          position: relative

          @media (max-width: 1023px)
            padding-top: 10px
            padding-bottom: 10px

          &:after
            content: ''
            position: absolute
            right: 0
            left: initial
            bottom: 0
            width: 0
            height: 2px
            background-color: #9900FF
            transition: width 0.3s, ease-in 0.3s

          &:hover
            &:after
              right: initial
              left: 0
              width: 100%
