.podcasts-list
  padding-top: 30px
  border-bottom: 1px solid #ECE4F0
  margin-bottom: 50px

  &--single
    margin-bottom: 0

    & ^[0]
      &__head
        margin-bottom: 0
        border-bottom: none

    .podcast-thumb
      max-width: 100%

  &__head
    border-bottom: 1px solid #ECE4F0
    padding-bottom: 40px
    margin-bottom: 30px

    @media (max-width: 959px)
      padding-bottom: 25px

  &__content
    text-align: center
    max-width: 1010px + 16px + 16px
    width: 100%
    padding-right: 16px
    padding-left: 16px
    margin-right: auto
    margin-left: auto

    h1
      font-size: 42px
      color: #1E0B2E
      font-weight: 500
      line-height: 1.3
      text-align: center
      text-transform: uppercase
      margin-top: 0
      margin-bottom: 20px

      @media (max-width: 767px)
        font-size: 28px
        margin-bottom: 10px

      span
        color: #9900FF
        text-decoration: none

  &__text
    font-size: 20px
    color: #1E0B2E
    font-family: $fonts.textFont
    font-weight: 400
    line-height: 1.3
    text-align: center

    p
      margin-top: 0

      &:last-child
        margin-bottom: 0

  &__sorting
    padding-top: 25px
    display: flex
    align-items: center
    justify-content: center
    flex-wrap: wrap

    @media (max-width: 959px)
      flex-wrap: nowrap
      overflow-x: auto
      justify-content: flex-start

  &__sorting-button
    font-size: 15px
    color: #1E0B2E
    font-weight: 500
    line-height: 1.1
    letter-spacing: 1px
    padding: 7px 15px
    background-color: transparent
    border: 1px solid #1E0B2E
    border-radius: 40px
    display: flex
    align-items: center
    justify-content: center
    margin-right: 15px
    margin-bottom: 15px
    transition: color 0.3s, background-color 0.3s, border-color 0.3s, ease 0.3s
    cursor: pointer

    @media (max-width: 959px)
      flex: 0 0 auto

    &:last-child
      margin-right: 0

    &:after
      content: ''
      flex: 0 0 12px
      width: 12px
      max-width: 12px
      height: 12px
      background-image: url("data:image/svg+xml,%3Csvg width='12' height='12' viewBox='0 0 12 12' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5.99998 6L11 1.00003M5.99998 6L11 11M5.99998 6L1.00002 11M5.99998 6L1 1' stroke='white' stroke-width='2'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      margin-left: 10px
      display: none

    &:hover
      color: #fff
      background-color: #1E0B2E
      border-color: #1E0B2E

    &._is-active
      color: #fff
      background-color: #8B00FD
      border-color: #8B00FD

      &:after
        display: block

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -35px

    @media (max-width: 1279px)
      justify-content: center

  &__item
    padding-left: 35px
    margin-bottom: 70px
    display: flex

    @media (max-width: 767px)
      margin-bottom: 35px