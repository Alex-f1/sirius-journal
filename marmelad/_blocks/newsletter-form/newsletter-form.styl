.newsletter-form
  &__section
    padding: 50px 55px
    position: relative
    z-index: 2

    @media (max-width: 1279px)
      padding: 40px

    @media (max-width: 1023px)
      padding: 45px 20px 35px 20px

    &:after
      content: ''
      position: absolute
      width: 100%
      height: 100%
      left: 0px
      top: 0px
      background: radial-gradient(94.65% 211.33% at 5.35% 100%, #8B00FD 0%, #9C27FD 42.19%, #FBF7FC 100%)
      border-radius: 24px
      transition: left 0.5s, ease 0.5s
      display: none

      @media (max-width: 1279px)
        display: block

  &__title
    font-size: 42px
    color: #1E0B2E
    font-weight: 500
    line-height: 1.2
    text-align: center
    text-transform: uppercase
    margin-bottom: 20px
    transition: color 1s, ease 1s
    position: relative
    z-index: 2

    @media (max-width: 1279px)
      color: #fff

    @media (max-width: 767px)
      font-size: 28px

  &__fields
    margin-bottom: 15px
    position: relative
    z-index: 2

  &__field
    display: flex
    align-items: center

    @media (max-width: 1023px)
      flex-direction: column

  &__input
    // flex: 0 0 285px
    // width: 285px
    // max-width: 285px
    @media (max-width: 1023px)
      width: 100%
      margin-bottom: 25px

    input
      font-size: 24px
      color: #1E0B2E
      font-weight: 500
      line-height: 1
      width: 100%
      height: 50px
      border: none
      background-color: transparent
      border-bottom: 2px solid #1E0B2E
      outline: none !important
      transition: color 1s, border-color 1s, ease 1s

      @media (max-width: 1279px)
        color: #fff
        border-color: #fff

    ::placeholder
      font-size: 24px
      color: #1E0B2E
      font-weight: 500
      line-height: 1
      text-transform: uppercase
      transition: color 1s, ease 1s

      @media (max-width: 1279px)
        color: #fff

  &__button-ok
    width: 90px
    min-width: auto
    margin-left: 8px
    transition: color 1s, border-color 1s, ease 1s

    @media (max-width: 1279px)
      color: #fff
      border-color: #fff

    @media (max-width: 1023px)
      width: 100%
      max-width: 100%

      &:hover
        &:after
          @media (max-width: 1023px)
            transform: scale(4) translate(-8%, -8%)

  &__note
    font-size: 13px
    font-weight: 500
    line-height: 1.2
    letter-spacing: 0.5px
    color: #1E0B2E
    transition: color 1s, ease 1s
    position: relative
    z-index: 2

    @media (max-width: 1279px)
      color: #fff

    a
      color: #1E0B2E
      text-decoration: none
      transition: color 1s, ease 1s

      @media (max-width: 1279px)
        color: #fff

      &:hover
        text-decoration: underline