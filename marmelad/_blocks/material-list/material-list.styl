.material-list
  padding-top: 30px
  padding-bottom: 100px

  &__head
    border-bottom: 1px solid #ECE4F0
    padding-bottom: 40px
    margin-bottom: 50px

  &__content
    text-align: center
    max-width: 1010px + 16px + 16px
    width: 100%
    padding-right: 16px
    padding-left: 16px
    margin-right: auto
    margin-left: auto

    h1
      font-size: 42px
      color: #1E0B2E
      font-weight: 500
      line-height: 1.3
      text-align: center
      text-transform: uppercase
      margin-top: 0
      margin-bottom: 20px

      @media (max-width: 767px)
        font-size: 28px
        margin-bottom: 10px

      a
        color: #9900FF
        text-decoration: none

  &__text
    font-size: 20px
    color: #1E0B2E
    font-family: $fonts.textFont
    font-weight: 400
    line-height: 1.3
    text-align: center

    p
      margin-top: 0

      &:last-child
        margin-bottom: 0

  &__find-articles
    font-size: 14px
    color: #1E0B2E
    font-family: $fonts.additionalFont
    font-weight: 400
    line-height: 1.1
    text-align: center
    letter-spacing: 5px
    text-transform: uppercase

  &__items
    display: flex
    flex-wrap: wrap
    justify-content: center

  &__item
    margin-bottom: 70px